<?xml version="1.0" encoding="utf-8" ?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <!-- Include only Application Features and Entities -->
          <Include>[YoFi.V3.Application]YoFi.V3.Application.Features.*,[YoFi.V3.Application]YoFi.V3.Application.Dto.*,[YoFi.V3.Entities]*</Include>
          <!-- Exclude test assemblies, generated code, and program entry points -->
          <Exclude>[*.Tests]*,[*]*Program,[*]*.Designer,[*]*.g.cs</Exclude>
          <ExcludeByAttribute>Obsolete,GeneratedCodeAttribute,CompilerGeneratedAttribute</ExcludeByAttribute>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
